{% extends './base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">Reset your password</h1>

            {{ form_start(resetForm, { 'attr': { 'class': 'space-y-6' } }) }}
            <div>
                {{ form_label(resetForm.plainPassword, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(resetForm.plainPassword, { 'attr': { 'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-900' } }) }}
                {{ form_errors(resetForm.plainPassword) }}
            </div>

            <button
                    class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2"
            >
                Reset password
            </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}